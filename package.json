{
  "name": "melissaesplin.com",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run build:watch & bun run serve & bun run tw:watch",
    "build": "bun run index.tsx &&  bun run tw:build",
    "build:watch": "bun run --watch index.tsx",
    "build:client": "bun run client.tsx",
    "serve": "bun run server.ts",
    "tw:watch": "bun run tw:build --watch",
    "tw:build": "bun run tailwindcss -i ./templates/styles.css -o ./docs/styles.css",
    "lint": "eslint ."
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@libsql/darwin-arm64": "^0.4.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-select": "^2.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.33.0",
    "fuse.js": "^7.0.0",
    "lucide-react": "^0.446.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/bun": "^1.1.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1"
  }
}